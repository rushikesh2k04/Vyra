<section id="home" class="hero">
  <div class="overlay"></div>
  <div class="content">
    <h1>Creating Cinematic Excellence</h1>
    <p>Bringing stories to life through the magic of cinema</p>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    background-image: url(https://i.postimg.cc/vBdc2YNK/1.png);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }
  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0,0,0,0.7), rgba(0,0,0,0.9));
  }
  .content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    padding: 0 1rem;
  }
  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    font-family: 'Cinzel', serif;
    color: rgb(var(--accent));
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.2;
  }
  p {
    font-size: 1.5rem;
    opacity: 0.9;
    color: white;
    font-weight: 300;
    margin-bottom: 3rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }
    p {
      font-size: 1.2rem;
    }
  }
</style>
